{
	"name": "@acdh-oeaw/comic-user-study",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "18.x",
		"npm": "9.x"
	},
	"packageManager": "npm@9.5.1",
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"lint": "next lint",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"lint:check": "eslint . --cache --ignore-path ./.gitignore",
		"lint:fix": "npm run lint:check -- --fix",
		"prepare": "run-s setup",
		"setup": "simple-git-hooks || exit 0",
		"start": "next start",
		"test": "exit 0",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.1",
		"@datapunt/matomo-tracker-react": "^0.5.1",
		"@stefanprobst/next-svg": "^4.2.1",
		"clsx": "^1.2.1",
		"next": "13.4.4",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"remark-gfm": "^3.0.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config-next": "^1.0.0",
		"@acdh-oeaw/eslint-config-react": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.0",
		"@acdh-oeaw/stylelint-config": "^1.0.2",
		"@acdh-oeaw/tsconfig": "^1.0.0",
		"@fontsource-variable/inter": "^5.0.2",
		"@mdx-js/loader": "^2.3.0",
		"@mdx-js/mdx": "^2.3.0",
		"@next/mdx": "^13.4.4",
		"@tailwindcss/typography": "^0.5.9",
		"@types/mdx": "^2.0.5",
		"@types/node": "^18.16.16",
		"@types/react": "^18.2.9",
		"@types/react-dom": "^18.2.4",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.42.0",
		"eslint-plugin-tailwindcss": "^3.12.1",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"remark-gfm": "^3.0.1",
		"simple-git-hooks": "^2.8.1",
		"stylelint": "^15.8.0",
		"tailwindcss": "^3.3.2",
		"typescript": "^5.1.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-react",
			"@acdh-oeaw/eslint-config-next",
			"plugin:eslint-plugin-tailwindcss/recommended"
		],
		"overrides": [
			{
				"files": [
					"./src/pages/**/*.tsx"
				],
				"rules": {
					"import/no-default-export": "off"
				}
			}
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|tsx),!./content/**": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {},
			"autoprefixer": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
